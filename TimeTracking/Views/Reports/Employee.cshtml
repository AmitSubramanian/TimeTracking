@model TimeTracking.ViewModels.SelectEmployeeReport
@{
    ViewData["Title"] = "Select Employee Report";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="Reports" asp-action="EmployeeReport">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="@Model.EmployeeList">
                    <option value="">Select an Employee</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <select asp-for="Year" class="form-control" asp-items="@Model.YearList">
                    <option value="">Select a Year</option>
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Month"></label>
                <select asp-for="Month" class="form-control" asp-items="@Model.MonthList">
                    <option value="">Select a Month</option>
                </select>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkWeek"></label>
                <select asp-for="WorkWeek" class="form-control" asp-items="@Model.WorkWeekList">
                    <option value="">Select a Work Week</option>
                </select>
                <span asp-validation-for="WorkWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
