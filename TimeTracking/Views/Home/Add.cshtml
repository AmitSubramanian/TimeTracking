@model TimeTracking.ViewModels.AddEmployee
@{
    ViewData["Title"] = "Add Employee";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="Home" asp-action="Add">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Employee Type:</label>
                <select asp-for="EmployeeTypeCode" class="form-control" asp-items="@Model.EmployeeType">
                    <option value="">Select an Employee Type</option>
                </select>
                <span asp-validation-for="EmployeeTypeCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
