@using TimeTracking.ViewModels

@model IEnumerable<EmployeeDetails>
@{
    ViewData["Title"] = "Employees";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <table class="table">
                <tr>
                    <th class="col-md-2">Employee Id</th>
                    <th class="col-md-4">Employee Name</th>
                    <th class="col-md-2">Employee Type</th>
                </tr>
                @if (Model.Count() > 0)
                {
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Id</td>
                            <td>@e.FirstName @e.LastName</td>
                            <td>@e.EmployeeTypeDescription</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No employees</td>
                    </tr>
                }
            </table>
        </div>
        <div class="form-group">
            <button class="btn-primary" type="submit" onclick="location.href='@Url.Action("Add", "Home")'">Add Employee</button>
        </div>
    </div>
`</div>
